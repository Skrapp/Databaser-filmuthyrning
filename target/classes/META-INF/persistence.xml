        <class>db.FilmCategory</class>
        <class>db.FilmText</class>
        <class>db.FilmActorId</class>
        <class>db.FilmActor</class>
        <class>db.Address</class>
        <class>db.City</class>
        <class>db.Country</class>
        <class>db.City</class>
        <class>db.Address</class>
        <class>db.FilmCategory</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/sakila?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="test2"/>
            <property name="javax.persistence.jdbc.password" value="test2"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.mysql.MySQLSpatialDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>