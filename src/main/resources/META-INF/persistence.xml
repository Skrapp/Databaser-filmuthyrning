<?xml version="1.0" encoding="UTF-8" ?>
<persistence    xmlns="http://java.sun.com/xml/ns/persistence"
                xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation = "http://java.sun.com/xml/ns/persistence
                http://java.sun.com/xml/ns/persistence_2_0.xsd" version="2.0">
    <persistence-unit name = "hibernate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>db.Customer</class>
        <class>db.Actor</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/sakila?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="test2"/>
            <property name="javax.persistence.jdbc.password" value="test2"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>